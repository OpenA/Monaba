$if not $ pageW == 0
    <a id=next-page href=@{routeW $ pageW - 1}>_{MsgPrevious}</a>&nbsp;
<span #pages-list>
  $forall (i,p) <- enumerate pagesW
    $if p == pageW
      <strong>#{ p }</strong>#
    $else
      <a href=@{routeW p}>#{ p }</a>#
    $if not $ i == (length pagesW - 1)
      &nbsp;
 
$if (pageW + 1) < length pagesW
    &nbsp;<a id=prev-page href=@{routeW $ pageW + 1}>_{MsgNext}</a>
