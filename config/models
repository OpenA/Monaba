    ip           Text
    localId      Int
    CaptchaUniqueLocalId localId
    info         Text 
    value        Text
    expires      UTCTime
Config
    captchaLength  Int
    aCaptchaGuards Int
    captchaTimeout Int -- in seconds
    replyDelay     Int
    threadDelay    Int 
    boardCategories [Text]
    newsBoard      Text default=news
    showNews       Int  default=2
    maxEditings    Int  default=10
